{
  "scopeName": "source.faf",
  "name": "FAF",
  "fileTypes": ["faf"],
  "patterns": [
    {
      "name": "comment.line.hash.faf",
      "match": "#.*$"
    },
    {
      "name": "keyword.control.faf",
      "match": "\\b(project|instant_context|context_quality|ai_scoring_details)\\b"
    },
    {
      "name": "string.quoted.double.faf", 
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.faf",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "string.quoted.single.faf",
      "begin": "'",
      "end": "'", 
      "patterns": [
        {
          "name": "constant.character.escape.faf",
          "match": "\\\\."
        }
      ]
    },
    {
      "name": "constant.numeric.faf",
      "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
    },
    {
      "name": "constant.language.boolean.faf",
      "match": "\\b(true|false)\\b"
    },
    {
      "name": "support.type.property-name.faf",
      "match": "^\\s*([a-zA-Z_][a-zA-Z0-9_]*)\\s*:"
    },
    {
      "name": "punctuation.separator.key-value.faf",
      "match": ":"
    },
    {
      "name": "punctuation.definition.array.begin.faf",
      "match": "\\["
    },
    {
      "name": "punctuation.definition.array.end.faf", 
      "match": "\\]"
    },
    {
      "name": "punctuation.separator.array.faf",
      "match": ","
    },
    {
      "name": "punctuation.definition.mapping.begin.faf",
      "match": "\\{"
    },
    {
      "name": "punctuation.definition.mapping.end.faf",
      "match": "\\}"
    }
  ]
}