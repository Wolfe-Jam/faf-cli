{
  "name": "@faf/cli",
  "version": "2.7.0",
  "description": "Command-line interface for .faf (Foundational AI-Context Format)",
  "main": "dist/index.js",
  "bin": {
    "faf": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:audit": "jest src/tests/faf-edge-case-audit.test.ts --verbose",
    "test:audit-watch": "jest src/tests/faf-edge-case-audit.test.ts --watch --verbose",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "emoji:check": "bash .githooks/pre-commit-emoji-check.sh",
    "emoji:audit": "(grep -r '🎯\\|✅' src/ | grep -v 'FORBIDDEN' || echo '☑️ No forbidden emojis found!')",
    "prepare": "npm run build && npm run test:audit",
    "docs:generate": "ts-node scripts/generate-docs.ts",
    "docs:build": "cd docs-site && npm run build",
    "docs:dev": "cd docs-site && npm run dev",
    "docs:deploy": "cd docs-site && vercel --prod",
    "docs:preview": "cd docs-site && vercel",
    "release": "ts-node scripts/prepare-release.ts",
    "release:patch": "npm run release -- --type patch",
    "release:minor": "npm run release -- --type minor", 
    "release:major": "npm run release -- --type major",
    "release:beta": "npm run release -- --type prerelease --preid beta",
    "release:dry": "npm run release -- --dry-run",
    "performance": "ts-node scripts/performance-validation.ts",
    "performance:ci": "npm run performance -- --tests status,help,index",
    "performance:full": "npm run performance -- --verbose"
  },
  "keywords": [
    "faf",
    "anti-faff",
    "ai-context",
    "cli",
    "validation",
    "project-context",
    "stop-faffing",
    "developer-productivity"
  ],
  "author": "🏎️⚡️_wolfejam.dev",
  "license": "MIT",
  "dependencies": {
    "@faf/engine": "file:./faf-engine",
    "chalk": "^4.1.2",
    "commander": "^9.5.0",
    "enquirer": "^2.4.1",
    "glob": "^8.1.0",
    "openai": "^5.16.0",
    "yaml": "^2.4.1"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
